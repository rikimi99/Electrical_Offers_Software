<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.riki.electrical_offers_software.offers.MaterialsController">
    <children>
        <TabPane fx:id="materialsTab" prefHeight="400.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <tabs>

                <!-- Materials Tab -->
                <Tab fx:id="materials" text="Υλικα">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="400.0" prefWidth="600.0">
                            <children>
                                <TableView fx:id="materialsTable" prefHeight="340.0" prefWidth="600.0" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                    <columns>
                                        <TableColumn fx:id="materialNameColumn" prefWidth="250.0" text="Ονομα" />
                                        <TableColumn fx:id="materialCategoryColumn" prefWidth="250.0" text="Κατηγορια" />
                                    </columns>
                                </TableView>

                                <Button fx:id="removeMaterialButton" layoutX="480.0" layoutY="350.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="100.0" text="Αφαιρεση" AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="10.0">
                                    <graphic>
                                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@../../../../icons/icons8-remove-50.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>

                                <Button fx:id="addMaterialButton" layoutX="360.0" layoutY="350.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="115.0" text="Προσθηκη" AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="120.0">
                                    <graphic>
                                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@../../../../icons/icons8-add-50.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>

                <!-- Categories Tab -->
                <Tab fx:id="categories" text="Κατηγορια">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="400.0" prefWidth="600.0">
                            <children>
                                <TableView fx:id="categoriesTable" prefHeight="340.0" prefWidth="600.0" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                    <columns>
                                        <TableColumn fx:id="categoryNameColumn" prefWidth="500.0" text="Ονομα" />
                                    </columns>
                                </TableView>

                                <Button fx:id="removeCategoryButton" layoutX="480.0" layoutY="350.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="100.0" text="Αφαιρεση" AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="10.0">
                                    <graphic>
                                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@../../../../icons/icons8-remove-50.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>

                                <Button fx:id="addCategoryButton" layoutX="360.0" layoutY="350.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="115.0" text="Προσθηκη" AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="120.0">
                                    <graphic>
                                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@../../../../icons/icons8-add-50.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>

            </tabs>
        </TabPane>
    </children>
</AnchorPane>
