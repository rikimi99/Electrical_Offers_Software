<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.riki.electrical_offers_software.offers.ChangePasswordController"
            prefHeight="200.0" prefWidth="400.0">

    <children>
        <Label layoutX="30.0" layoutY="20.0" text="Current Password:" />
        <PasswordField fx:id="currentPasswordField" layoutX="160.0" layoutY="20.0" prefWidth="200.0" />

        <Label layoutX="30.0" layoutY="60.0" text="New Password:" />
        <PasswordField fx:id="newPasswordField" layoutX="160.0" layoutY="60.0" prefWidth="200.0" />

        <Label layoutX="30.0" layoutY="100.0" text="Confirm Password:" />
        <PasswordField fx:id="confirmPasswordField" layoutX="160.0" layoutY="100.0" prefWidth="200.0" />

        <Button fx:id="changePasswordButton" layoutX="160.0" layoutY="140.0" text="Change Password" />
    </children>
</AnchorPane>
